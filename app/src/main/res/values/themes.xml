<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmsRelay2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="colorTextTitle">@color/dark_violet</item>
        <item name="colorTextSender">@color/black</item>
        <item name="colorTextSubtitle">@color/dark_gray</item>
        <item name="colorInfoBannerBg">@color/ultra_light_gray</item>
        <item name="colorBackground">@color/white</item>
        <item name="icInfo">@drawable/ic_info_violet</item>
        <item name="icSearch">@drawable/ic_search_light</item>
        <item name="icClear">@drawable/ic_clear_light</item>
        <item name="icBack">@drawable/ic_back_light</item>
    </style>
</resources>